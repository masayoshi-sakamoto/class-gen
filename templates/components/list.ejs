<template>
  <v-data-table
    :items="items.entities"
    :headers="headers"
    :options.sync="options"
    :server-items-length="items.options.total"
    :items-per-page="items.options.itemsPerPage"
    hide-default-footer
    @update:options="change"
  >
    <template v-slot:no-data>
      検索結果はありません。
    </template>
    <template v-slot:item.actions="{ item }">
      <v-btn elevation="0" class="mr-3" small outlined color="primary" @click="push(item)">詳細</v-btn>
      <v-icon small class="mr-3" @click="edit(item)">mdi-pencil</v-icon>
      <v-icon small @click="remove(item)">mdi-delete</v-icon>
    </template>
  </v-data-table>
</template>

<script lang="ts">
import Vue, { PropType } from 'vue'
import <%= name %>Entity, { headers, I<%= name %>List } from '@/entities/<%= name %>'
import { IOptions } from '@/entities/Options'

interface IData {
  headers: any[]
  options: IOptions
}

export default Vue.extend({
  props: {
    items: {
      type: Object as PropType<I<%= name %>List>,
      required: true
    }
  },
  data(): IData {
    return {
      headers,
      options: this.items.options.options
    }
  },
  methods: {
    change() {
      this.items.options.options = this.options
      this.$emit('change')
    },
    push(enitity: <%= name %>Entity) {
      this.$router.push({
        name: '<%= name.toLowerCase() %>-id',
        params: { id: enitity.id }
      })
    }
  }
})
</script>
