get:
  tags:
    - <%= name %>
  operationId: get<%= name %>
  description: Get <%= name %>
  parameters:
    - in: path
      name: <%= name.toLowerCase() %>Id
      schema:
        type: string
        example: unique_<%= name.toLowerCase() %>_id
      required: true
      description: <%= name %> ID
  responses:
    '200':
      description: OK
      content:
        application/json:
          schema:
            required:
              - <%= name.toLowerCase() %>
            type: object
            properties:
              <%= name.toLowerCase() %>:
                $ref: "#/components/schemas/<%= name %>"
